	<authorUrl>http://www.cc5tudio.com</authorUrl>
	<version>1.5</version>
	<description>CiviCRM Change Lock Status Hook for defining lock/unlock features</description>
	<files>
		<filename plugin="changelockstatus">changelockstatus.php</filename>
	</files>
	 <params>
                <param name="lockstatus_activity_type" type="text" default="106" label="Activity Type" description="Change lock status activity type"/>
                <param name="activity_id_field" type="text" default="1755" label="Activity Field ID" description="Activity custom field id"/>
                <param name="lockstatus_field" type="text" default="1756" label="Lock Status Field ID" description="Lock status custom field id"/>
                <param name="autolock_field" type="text" default="1757" label="Auto Lock Field" description="Auto lock field"/>
                <param name="lockstatus_table" type="text" default="271" label="Lock Status Table" description="Lock status table id"/>
          </params> 
</install>
